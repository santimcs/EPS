<h1>Listing prices</h1>

<%= paginate @prices %>
<table>
  <tr>
    <th>Name</th>
    <th>Date</th>
    <th>Price</th>
    <th>Max price</th>
    <th>Min price</th>
    <th>Qty</th>
    <th>Volume</th>    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @prices.each do |price| %>
  <tr>
    <td><%= price.name %></td>
    <td><%= price.date %></td>
    <td><%= number_to_currency(price.price) %></td>
    <td><%= number_to_currency(price.max_price) %></td>
    <td><%= number_to_currency(price.min_price) %></td>
    <td><%= number_with_delimiter(price.qty) %></td>
    <td><%= number_to_currency(price.price * price.qty) %></td>    
    <td><%= link_to 'Show', price %></td>
    <td><%= link_to 'Edit', edit_price_path(price) %></td>
    <td><%= link_to 'Destroy', price, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

